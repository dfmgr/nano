# Include nanorc files
include ~/.config/nano/inc/*

#  Set options
set quotestr "^([ 	]*([!#%:;>|}]|//))+"
set matchbrackets "(<[{)>]}"
set brackets ""')>]}"
set constantshow
set historylog
set magic
set positionlog
set showcursor
set smarthome
set tabsize 4
set tabstospaces
set multibuffer

# Set global syntax
extendsyntax python tabgives "    "
extendsyntax Makefile tabgives "	"

# Set key bindings
unbind F11 all
unbind ^G all

bind ^Q exit all
bind ^S savefile main
bind ^W writeout main
bind ^O insert main
bind ^F whereis all
bind ^G findnext all
bind ^B wherewas all
bind ^D findprevious all
bind ^R replace main
bind ^X cut main
bind ^C copy main
bind ^V paste main
bind ^P location main
bind ^A mark main
bind ^L gotoline main
bind ^T gotodir browser
bind ^K speller main
bind ^U undo main
bind ^E redo main
bind ^/ comment main
